<div class="container lists-show">
  <div class="row">
    <div class="col-md-6">
      <% @posts.each do |post|%>
        <div class="list-post">
          <%= link_to post_path(post) do %>
            <%= attachment_image_tag post, :image, :fill, 400, 300,fallback: "no_image.jpg", size:'400x300'  %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-md-6 post-text-box">
      <%= form_with(model: @post, local: true) do |f| %>
        <h3>投稿作成</h3>
        <div class="post-image-group">
          <%= f.label :画像, class: "brown-border px-3" %><br>
          <%= f.attachment_field :image %>
        </div>
        <div class="form-group">
          <%= f.label :内容（任意項目）%>
          <%= f.text_area :body, class: "form-control", placeholder: "任意項目です" %>
        </div> 
        <%= f.hidden_field :list_id, :value => @list.id %>   
        <%= f.submit "投稿", class: "btn btn-outline-primary offset-4 mt-3 col-3" %> 
      <% end %>
    </div>
  </div>
</div>