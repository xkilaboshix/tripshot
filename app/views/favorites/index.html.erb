<div class="container">
  <% @favorites.each do |favorite| %>
    <div class="post-image" style="width:400px;">
      <%= link_to post_path(favorite.post) do %>
        <%= attachment_image_tag favorite.post, :image, :fill, 400, 300, fallback: "no_image.jpg", size:'400x300' %>
      <% end %>
      <div class="profile-image">
        <%= link_to user_path(favorite.post.user) do %>
        <%= attachment_image_tag favorite.post.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'60x60' %>
      <% end %>
      </div>
      <div class="tag"> 
        <% favorite.post.list.tag_list.each do |tag| %>
          <span class="badge badge-info"><%= tag %></span>
        <% end %>
      </div>
      <p class="fav_<%= favorite.post.id %> like">
        <%= render 'posts/like', user: current_user, post: favorite.post %>
      </p>
    </div>
  <% end %>
</div>


        