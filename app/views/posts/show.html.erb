<div class="container">
    <div class="post-edit">
      <% if current_user.id == @post.user.id %>
        <p><%= link_to "投稿編集", edit_post_path(@post), class: "btn btn-primary" %></p>
      <% end %>
    </div>
  <div class="d-flex justify-content-around mt-5">
    <div class="post-content">
      <div class="list_show">
        <%= link_to user_path(@post.user) do %>
          <%= attachment_image_tag @post.user, :profile_image, :fill, 60, 60, fallback:   "no_image.jpg", size:'60x60'%>
        <% end %>
        <%= @post.list.title %>
        <%= "　#{@post.list.departure_date}〜#{@post.list.return_date}" %>
      </div>
      <%= attachment_image_tag @post, :image, :fill, 400, 300, fallback: "no_image.jpg", size:'400x300' %>
      <p class="post-body"><%= @post.body %></p>  
      <div class="fav_<%= @post.id %> d-flex justify-content-between">
        <div class="tag_ahow"> 
          <% @post.list.tag_list.each do |tag| %>
            <span class="badge badge-info"><%= tag %></span>
          <% end %>
        </div>
        <%= render 'like', user: current_user, post: @post %>
      </div>
    </div>
    <div class="post-comments">
      <h4>コメント</h4>
      <%= render 'comment', user: current_user, post: @post %>
      <div class="post_comment">
        <%= form_with(model: [@post, @post_comment]) do |f| %>
        <div class="row">
          <div class="col-sm-12">
            <%= f.text_area :comment, rows:'5', class: "form-control comment_form",placeholder: "コメントをここに" %>
          </div>
        </div>
        <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
        <% end %>
      </div>
    </div>
  </div>
</div>