<div class="container">
  <div class="row">
    <div class="col-6">
      <h2>全ての投稿一覧</h2>
      <% @posts.each do |post| %> 
        <%= link_to post_path(post) do %> 
          <%= attachment_image_tag post, :image, :fill, 400, 300,fallback: "no_image.jpg", size:'400x300' %>
        <% end %>
      <% end %>
    </div>   
    <div class="col-6">
      <h2>お気に入りランキング</h2>
      <% @favorite_ranks.each do |post| %>
        <%= link_to post_path(post) do %> 
          <%= attachment_image_tag post, :image, :fill, 400, 300,fallback: "no_image.jpg", size:'400x300' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
