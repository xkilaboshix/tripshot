<div class="container post_index">
  <div class="row">
    <div class="col-md-6">
      <h3 class="text_white">週間お気に入りランキング</h3>
      <% if @favorite_ranks %>
        <% @favorite_ranks.each do |post| %>
          <div class="post-image">
            <%= link_to post_path(post) do %>
              <%= attachment_image_tag post, :image, :fill, 400, 300,fallback: "no_image.jpg", size:'400x300' %>
            <% end %>
            <div class="profile-image">
              <%= link_to user_path(post.user) do %>
                <%= attachment_image_tag post.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'60x60' %>
              <% end %>
            </div>
            <p class="rank_image">
              <%= image_tag rank(post,@first_rank,@second_rank,@third_rank), size: '48x48' %>
            </p>
            <div class="tag"> 
              <% post.list.tag_list.each do |tag| %>
                <span class="badge badge-info"><%= tag %></span>
              <% end %>
            </div>
            <p class="fav_<%= post.id %> like">
              <%= render 'posts/like', user: current_user, post: post %>
            </p>
          </div>
          <% else %>
          <div class="no_rank">
            <p>該当なし<br>新しい投稿にいいねしましょう！</p>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-md-6 posts">
      <h3 class="text_white">全ての投稿一覧</h3>
      <% @posts.each do |post| %>
        <div class="post-image">
          <%= link_to post_path(post) do %>
            <%= attachment_image_tag post, :image, :fill, 400, 300,fallback: "no_image.jpg", size:'400x300' %>
          <% end %>
          <div class="profile-image">
            <%= link_to user_path(post.user) do %>
              <%= attachment_image_tag post.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'60x60' %>
            <% end %>
          </div>
          <div class="tag"> 
            <% post.list.tag_list.each do |tag| %>
              <span class="badge badge-info"><%= tag %></span>
            <% end %>
          </div>
          <p class="fav_<%= post.id %> like">
            <%= render 'posts/like', user: current_user, post: post %>
          </p>
        </div>
      <% end %>
    </div>  
  </div>
  <% if request.from_pc? %>
    <%= paginate @posts %>
  <% end %>
</div>