<div class="container my-5">
  <div class="d-flex flex-column">
    <%- flash.each do |name, msg| -%>
      <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
    <%- end -%> 
    <div class="row mx-auto">
      <strong class="red-border px-3 pb-1">会員の方はこちらからログイン</strong>
    </div>
    <div class="row mx-auto">
      <div class="">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-goup mt-5">
          <%= f.label :メールアドレス, class: "brown-border px-3 pb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control offset-1 col-10" %>
        </div>
        <div class="form-goup mt-3">
          <%= f.label :パスワード, class: "brown-border px-3 pb-1" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control offset-1 col-10" %>
        </div>
        <div class="row mt-1">
          <%= link_to "→ パスワードをお忘れの方はこちら", new_password_path(resource_name), class: "ml-auto" %>
        </div>
        <div class="row">
          <%= f.submit "Log in", class: "btn btn-outline-primary btn-block mt-5" %>
        </div>
        <% end %>
      </div>
    </div>
    <div class="row mx-auto mt-5">
      <strong class="red-border">登録がお済みでない方</strong>
    </div>
    <div class="row mx-auto">
      <div class="">
        <%= link_to "こちらから新規登録を行ってください。", new_registration_path(resource_name), class: "btn btn-outline-primary" %>
      </div>
    </div>
  </div>
</div>