<div class="container">
  <div class="all_area">
    <ul class="tab_area">
      <li id="tab1" class="select">フォロー中</li>
      <li id="tab2">フォロワー</li>
    </ul> 
    <div class="content_area" id="area1">
      <div class="d-flex justify-content-around">
        <table class="table">
          <thead>
            <th>画像</th>
            <th>名前</th>
            <th>フォロー数</th>
            <th>フォロワー数</th>
            <th>フォローボタン</th>
          </thead>
          <% @followings.each do |user| %>
            <tbody>
              <tr>
                <td class="profile-image_follow">
                  <%= link_to user_path(user) do %>
                    <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'60x60'%>
                  <% end %>
                </td>
                <td><%= user.name%></td>
                <td><%= user.followings.count %></td>
                <td><%= user.followers.count %></td>
                <td><%= render partial: "users/follow_button", locals: { user: user } %></td>
              </tr>
            </tbody>
          <% end %>
        </table>
      </div>
    </div>
    <div class="content_area hide" id="area2">
      <div class="d-flex justify-content-around">
        <table class="table">
          <thead>
            <th>画像</th>
            <th>名前</th>
            <th>フォロー数</th>
            <th>フォロワー数</th>
            <th>フォローボタン</th>
          </thead>
          <% @followers.each do |user| %>
            <tbody>
              <tr>
                <td class="profile-image_follow">
                  <%= link_to user_path(user) do %>
                    <%= attachment_image_tag user, :profile_image, :fill, 60, 60,fallback: "no_image.jpg", size:'60x60'%>
                  <% end %>
                </td>
                <td><%= user.name%></td>
                <td><%= user.followings.count %></td>
                <td><%= user.followers.count %></td>
                <td><%= render partial: "users/follow_button", locals: { user: user } %></td>
              </tr>
            </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>