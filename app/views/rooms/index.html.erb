<div class="container">
  <div class = "room-form">
    <h2>Rooms</h2>
    <%= form_for(@room) do |f| %>
    <h5>チャットルーム作成フォーム</h5>
    <%= f.text_field :name, required: true, class:"col-xs-12" %>
    <%= f.submit '部屋を作る', class:"col-xs-12" %>
    <% end %>
  </div>
  <div class="d-flex flex-column justify-content-around">
    <ul>
      <% @rooms.each do |room| %>
        <li>
          <%= link_to room.name, user_rooms_path(room_id: room.id), method: :post, data: {"turbolinks" => false} %>
          <% if room.owner_id == current_user.id %>
            <%= link_to "削除", room_path(room), method: :delete, class: "btn btn-danger" %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
